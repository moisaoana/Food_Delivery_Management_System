      </Label>
      <Label fx:id="passwordLabel" layoutX="28.0" layoutY="264.0" text="password: " textFill="WHITE">
         <font>
            <Font name="Kristen ITC" size="17.0" />
         </font>
      </Label>
      <TextField fx:id="usernameTextfield" layoutX="117.0" layoutY="193.0" prefHeight="25.0" prefWidth="232.0" promptText="Please enter your username!" />
