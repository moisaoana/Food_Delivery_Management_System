            <Font name="Kristen ITC" size="12.0" />
         </font>
      </Label>
      <Label fx:id="emptyPasswordLabel" layoutX="357.0" layoutY="269.0" text="Required field!" textFill="#e41b1b" visible="false">
         <font>
            <Font name="Kristen ITC" size="12.0" />
         </font>
      </Label>
      <Button fx:id="backButton" layoutX="278.0" layoutY="355.0" mnemonicParsing="false" onAction="#clickBack" style="-fx-background-color: darksalmon;" text="BACK" textFill="WHITE">
         <font>
            <Font name="Kristen ITC" size="15.0" />
         </font>
      </Button>
